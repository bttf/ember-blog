<hr>
{{#each entry in controller}}
<div class="row">
  <div class="col-xs-8 text-left">
    {{#if isText}}
      <span class="entry-icon"><i class="fa fa-file-text-o"></i></span>
    {{/if}}
    {{#if isFilm}}
      <span class="entry-icon"><i class="fa fa-file-video-o"></i></span>
    {{/if}}
    <span class="entry-title">{{#link-to 'entry' entry}}{{entry.title}}{{/link-to}}</span>
  </div>
  {{#if session.isAuthenticated}}
  <div class="col-xs-4 text-right">
    <button class="btn btn-danger" type="button" {{action "delete" entry}}>Delete</button>
  </div>
  {{/if}}
  <div class="col-xs-8 text-left">
    <span class="entry-tags">
    {{#each tag in entry.tags}}
      <a href="#">{{tag}}</a> 
    {{/each}}
  </span>
  </div>
  <div class="col-xs-4 text-right">
    <span class="entry-timestamp">{{entry.modified}}</span>
  </div>
</div>

<hr>
{{/each}}
<br>
{{#unless session.isAuthenticated}}
  {{#link-to 'login'}}login eh?{{/link-to}}
{{/unless}}

{{#if session.isAuthenticated}}
  {{#link-to 'logout'}}logout eh?{{/link-to}}
{{/if}}

